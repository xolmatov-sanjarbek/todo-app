<%= link_to todo_path(todo) do %>
  <div id="<%= dom_id todo %>" class="w-full min-w-4xl sm:w-auto my-5 space-y-5 bg-amber-200 rounded-2xl p-5">
    <div>
      <strong class="block font-bold mb-1">Name:</strong>
      <%= todo.name %>
    </div>
    <div>
      <strong class="block font-medium mb-1">Description:</strong>
      <%= todo.description %>
    </div>
    <div>
      <strong class="block font-medium mb-1">Priority:</strong>
      <%= todo.priority %>
    </div>
    <div>
      <strong class="block font-medium mb-1">Completed:</strong>
      <%= todo.completed? ? "Yes" : "No" %>
    </div>
  </div>
<% end %>

