<% content_for :title, "Projects" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Todos</h1>
    <%= link_to "Projects", projects_path, class:"rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= link_to "New Project", new_project_path, class:"rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="todos" class="min-w-full space-y-1">
    <% if @projects.any? %>
      <% @projects.reverse.each do |project| %>
        <div class="flex flex-col sm:flex-row justify-center items-center pb-2 sm:pb-0">
          <%= render project %>
       </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No Projects found.</p>
    <% end %>
  </div>
</div>

